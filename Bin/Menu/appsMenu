#!/bin/sh 

choice=$(printf " Back\n󰏕 Install\n󰏕 AUR Install\n󰏔 Uninstall\n󰏓 Purge" | rofi -dmenu -p "")

case "$choice" in
    " Back")
        sh ~/bin/Menu/mainMenu
        ;;
    "󰏕 Install")
        kitty -T "floatterminal" -e sh ~/bin/Menu/pkgInstall
        ;;
    "󰏕 AUR Install")
        kitty -T "floatterminal" -e sh ~/bin/Menu/pkgInstallAur
        ;;
    "󰏔 Uninstall")
        kitty -T "floatterminal" -e sh ~/bin/Menu/pkgRemove 
        ;;
    "󰏓 Purge")
        kitty -T "floatterminal" -e sh ~/bin/Menu/pkgPurge 
        ;;
    *)
esac
